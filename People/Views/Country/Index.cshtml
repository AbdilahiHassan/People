@model People.Models.ViewModel.CountryViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<a asp-action="Create">Create Country</a>


@if (Model != null && Model.Nations.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>CountryName</th>
               <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Nations)
            {
                <tr>
                    <td>@item.Name</td>

                    <td>

                        <a asp-action="Edit" asp-controller="Country" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Details" asp-controller="Country" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-controller="Country" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}